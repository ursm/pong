<div>
  <%= link_to 'New Post', new_admin_post_path, class: 'btn btn-outline-primary' %>
</div>

<div class="list-group">
  <% @posts.each do |post| %>
    <%= link_to edit_admin_post_path(post), class: 'list-group-item list-group-item-action d-flex gap-3' do %>
      <time>
        <%= l post.created_at.to_date %>
      </time>

      <div class="text-truncate">
        <%= post.title %>
      </div>
    <% end %>
  <% end %>
</div>
