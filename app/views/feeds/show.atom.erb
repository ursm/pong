<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">
  <title>pong.ursm.jp</title>
  <link href="<%= root_url %>" />
  <link rel="self" href="<%= feed_url(format: :atom) %>" />
  <id><%= root_url %></id>
  <updated><%= @posts.first.created_at.iso8601 %></updated>

  <% @posts.each do |post| %>
    <entry>
      <title><%= post.date %></title>
      <link href="<%= year_month_day_url(post.year, post.month, post.day) %>" />
      <id><%= year_month_day_url(post.year, post.month, post.day) %></id>
      <updated><%= post.created_at.iso8601 %></updated>

      <content type="html">
        <![CDATA[<%= post.rendered_body %>]]>
      </content>

      <author>
        <name>ursm</name>
      </author>
    </entry>
  <% end %>
</feed>
